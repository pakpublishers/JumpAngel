<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:id="@+id/Titlescreen"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:layout_height="40dip" android:layout_alignParentTop="true">
    
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="@drawable/jumpangellogo"
        android:layout_centerVertical="true"
        
        android:layout_alignParentLeft="true"></LinearLayout>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Vehicle"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"/>
    
    <Button  android:layout_width="60dip" android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="11dip"
        android:background="@drawable/btnselector"
        android:textColor="@android:color/white"
        android:id="@+id/AddButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    
	</RelativeLayout>
	
    <ListView 
        android:id="@+id/VehicleMainListView"
        android:layout_margin="10dip"
        android:background="@drawable/menubglayout"
        android:cacheColorHint="#aaaaaa"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_below="@+id/Titlescreen"></ListView>
	
</RelativeLayout>