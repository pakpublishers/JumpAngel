<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/thinwhite" >
    
    <RelativeLayout android:id="@+id/PAV_Title_Area"
           android:layout_marginTop="10dip" android:layout_width="match_parent"  android:layout_height="50dip">
        
        <LinearLayout android:layout_marginLeft="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
             android:background="@drawable/jumpangellogo"></LinearLayout>
        <TextView
                android:id="@+id/PAV_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Vehicle"
                android:textStyle="bold"
                android:textSize="16dip"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black" />
        
    </RelativeLayout>
    
    
    <ScrollView android:layout_margin="5dip" android:layout_below="@+id/PAV_Title_Area" android:layout_width="match_parent" android:layout_height="match_parent">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            
            
            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical" android:layout_height="65dip" android:background="@drawable/top">
		        <TextView android:text="Vehicle Name" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		        <EditText
			        android:id="@+id/AddVehicleVehicleName"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="0dip"
			        android:background="@null"
			         android:textSize="16dip" android:textColor="@color/black"
			         android:hint="Vehicle Name"
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        android:inputType="textCapSentences"
			        
			        android:ems="10"
			       >
			
			        <requestFocus />
			    </EditText>
		    </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="State"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		         <Spinner
	                android:id="@+id/AddVehicleMotoristPlateState"
	                android:layout_width="match_parent"
	                android:layout_height="50dip"
	                android:ems="10"
	                android:entries="@array/state"
	                android:hint="Motorist Plate State"
	                android:text="alaska" />
		    </LinearLayout>
            

            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Licence Plate"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		        <EditText
			        android:id="@+id/AddVehicleVehicleLicencePlate"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="0dip"
			        
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        
			        android:ems="10"
			        
			        android:hint="Vehicle Licence Plate"
       android:background="@null"
			         android:textSize="16dip" android:textColor="@color/black"
			         android:inputType="textCapSentences" >
			
			        
			    </EditText>
		    </LinearLayout>

             <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Color"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		        <EditText
			        android:id="@+id/AddVehicleVehicleColor"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="0dip"
			        
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        
			        android:ems="10"
			        android:hint="Vehicle Color"
	        		android:background="@null"
			         android:textSize="16dip" android:textColor="@color/black"
			        
			         android:inputType="textCapSentences" >
			
			        
			    </EditText>
		    </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Fuel Type"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		         <Spinner
	                android:id="@+id/AddVehicleVehicleFuel"
	                android:layout_width="match_parent"
	                android:layout_height="50dip"
	                android:ems="10"
	                android:entries="@array/fueltype"
	                android:hint="Motorist Plate State"
	                android:text="alaska" />
		    </LinearLayout>

           

            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Color"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		        <EditText
			        android:id="@+id/AddVehicleVehicleColor"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="0dip"
			        
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        
			        android:ems="10"
			        android:hint="Vehicle Color"
	        		android:background="@null"
			         android:textSize="16dip" android:textColor="@color/black"
			        
			         android:inputType="textCapSentences" >
			
			        
			    </EditText>
		    </LinearLayout>
            
            
            
            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Model"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		        <EditText
			        android:id="@+id/AddVehicleVechicleModel"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="0dip"
			        
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        
			        android:ems="10"
			        android:hint="Vehicle Model"
	        		android:background="@null"
			         android:textSize="16dip" android:textColor="@color/black"
			        
			         android:inputType="textCapSentences" >
			
			        
			    </EditText>
		    </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Make"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		        <EditText
			        android:id="@+id/AddVehicleVehicleMake"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="0dip"
			        
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        
			        android:ems="10"
			        android:hint="Vehicle Make"
	        android:background="@null"
			         android:textSize="16dip" android:textColor="@color/black"
			        
			         android:inputType="textCapSentences" >
			
			       
			    </EditText>
		    </LinearLayout>
           

            
            <LinearLayout android:layout_width="match_parent" android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/mid">
		        <TextView android:text="Year"   android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		         <Spinner
	                android:id="@+id/AddVehicleVehicleYear"
	                android:layout_width="match_parent"
	                android:layout_height="50dip"
	                android:ems="10"
	                android:entries="@array/Year"
	                android:hint="Motorist Plate State"
	                android:text="alaska" />
		    </LinearLayout>
            
			
            <LinearLayout android:layout_width="match_parent"  android:gravity="center_vertical"  android:layout_height="65dip" android:background="@drawable/bottom">
		        <TextView android:text="Type"  android:layout_marginLeft="15dip" android:layout_marginRight="5dip" android:gravity="left|center_vertical" android:layout_width="90dip" android:layout_height="42dip" android:textSize="16dip" android:textStyle="bold" android:textColor="@color/black"/>
		         <Spinner
	                android:id="@+id/AddVehicleVehicleType"
	                android:layout_width="match_parent"
	                android:layout_height="50dip"
	                android:ems="10"
	                android:layout_margin="0dip"
	                android:entries="@array/vehicletype"
	                android:hint="Motorist Plate State"
	                android:text="alaska" />
		    </LinearLayout>
            
            

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="50dip">
            
            <Button
                android:id="@+id/ProviderAddVehicleCancelButton"
                android:layout_width="80dip"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AddVehicleMotoristPlateState"
                android:text="Cancel" />

            

            </RelativeLayout>
            
        </LinearLayout>
        
    </ScrollView>
    

    <RelativeLayout android:layout_width="match_parent" android:background="@color/thinwhite" android:paddingRight="5dip" android:layout_alignParentBottom="true" android:layout_height="50dip">
        <Button
                android:id="@+id/AddVehicleServiceProfile"
                android:layout_width="180dip"
                android:layout_height="40dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:background="@drawable/btnselector"
                android:textColor="@android:color/white"
                android:textSize="11dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/AddVehicleMotoristPlateState"
                android:text="Add Vehicle Service profile" />
    </RelativeLayout>
    
</RelativeLayout>