<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
     >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="Tow Service Detail\r\nVehicle Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/Tow_Boom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="23dp"
        android:text="Boom"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/BJCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Cancel" />

	<RadioGroup
	    android:id="@+id/BJApplyShoice"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/BJCancelButton"
	    android:paddingLeft="50dip" >

	    <RadioButton
	        android:id="@+id/BJEntireFleet"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="Apply to Vehicle Name only"
	        android:textColor="@android:color/black" />
	    
	    <RadioButton
	        android:id="@+id/BJEntireFleet"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_alignLeft="@+id/BJVehicleOnly"
	        
	        android:textColor="@android:color/black"
	        android:text="Apply to Entire Fleet" />
		</RadioGroup>
    <Button
        android:id="@+id/BJDoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Done" />

    <CheckBox
        android:id="@+id/TowWinch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TowWheelLift"
        android:layout_below="@+id/TowWheelLift"
        android:text="Winch"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/Tow_Flatbed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Tow_Boom"
        android:layout_below="@+id/Tow_Boom"
        android:text="Flat-Bed"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/Tow_Sling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Tow_Flatbed"
        android:layout_below="@+id/Tow_Flatbed"
        android:text="Sling"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/TowWheelLift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Tow_Sling"
        android:layout_below="@+id/Tow_Sling"
        android:text="Wheel Lift"
        android:textColor="@android:color/black" />

</RelativeLayout>